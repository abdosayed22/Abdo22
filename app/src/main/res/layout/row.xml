<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="#000"
    >
    <android.support.v7.widget.CardView
        android:layout_margin="12dp"
        android:background="@drawable/card_back"
        android:id="@+id/card-row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/des-txt"
                android:layout_width="200dp"
                android:layout_height="90sp"
                android:layout_marginStart="5dp"
                android:text="Description Here !"
                android:textColor="#000"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/price-txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/comp-btn"

                android:layout_marginEnd="190dp"
                android:layout_marginTop="90dp"
                android:text="price Here !"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,KeyboardInaccessibleWidget" />

            <Button
                android:id="@+id/edt-btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="45dp"
                android:layout_toEndOf="@+id/des-txt"
                android:text="Edit"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/del-btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt-btn"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/des-txt"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/comp-btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/del-btn"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/des-txt"
                android:text="done"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>